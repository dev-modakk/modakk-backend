generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ConfigCarousel {
  id        String   @id @default(uuid())
  slides    Json     // [{ image: string, title: string, description: string }, ...]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model KidsGiftBox {
  id           String   @id @db.VarChar(20) // Changed to String for MDK format
  name         String   @db.VarChar(200)
  description  String
  priceInINR   Decimal  @db.Decimal(10,2)   
  image        String
  badge        String?  @db.VarChar(50)
  rating       Decimal  @db.Decimal(2,1) 
  reviews      Int      @default(0)
  isWishlisted Boolean  @default(false)
  isSoldOut    Boolean  @default(false)
  images       String[] @default([])
  category     String   @db.VarChar(2) @default("GB")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([category])
  @@index([createdAt])
}
